<div class="container d-flex flex-column align-content-center">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center p-4 border-bottom">Stations with available bixis near the office</h1>
    </div>
    <div class="col-md-4 offset-md-4 d-flex justify-content-center">

      <%= form_tag("/stations", method: "post") do %>
        <%= submit_tag("Refresh stations", class: "btn btn-primary btn-lg m-4") %>
      <% end %>

    </div>
    <div class="col-md-10  offset-md-1">

      <% unless @stations_with_bixis.empty? %>

      <table class="table table-bordered m-2">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Address</th>
            <th scope="col">Distance from office</th>
            <th scope="col">Number of available bixis</th>
          </tr>
        </thead>
        <tbody>
          <% @stations_with_bixis.each_with_index do |station, index| %>
          <tr>
            <th scope="row"><%= index %></th>
            <%= render station %>
          </tr>
          <% end %>
        </tbody>
      </table>

      <% end %>

      <% if @closest_stations %>

      <h4 class="m-4"><%= @message %></h4>
      <table class="table table-bordered m-2">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Address</th>
            <th scope="col">Distance from office</th>
            <th scope="col">Number of available bixis</th>
          </tr>
        </thead>
        <tbody>
          <% @closest_stations.each_with_index do |station, index| %>
          <tr>
            <th scope="row"><%= index %></th>
            <%= render station %>
          </tr>
          <% end %>
        </tbody>
      </table>

      <% end %>

    </div>
  </div>
</div>
