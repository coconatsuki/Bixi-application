<% if !stations_with_bixis.empty? %>

<table class="table table-bordered m-2">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t(:address_header) %></th>
      <th scope="col"><%= t(:distance_header) %></th>
      <th scope="col"><%= t(:bixis_num_header) %></th>
    </tr>
  </thead>
  <tbody id="bixis-table">
    <% stations_with_bixis.each_with_index do |station, index| %>
    <tr>
      <th scope="row"><%= index %></th>
      <%= render station %>
    </tr>
    <% end %>
  </tbody>
</table>

<% else %>

<h4 class="m-5 message"><%= t(:no_bixi_available) %></h4>
<table class="table table-bordered m-2">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t(:address_header) %></th>
      <th scope="col"><%= t(:distance_header) %></th>
      <th scope="col"><%= t(:bixis_num_header) %></th>
    </tr>
  </thead>
  <tbody>
    <% closest_stations.each_with_index do |station, index| %>
    <tr>
      <th scope="row"><%= index %></th>
      <%= render station %>
    </tr>
    <% end %>
  </tbody>
</table>

<% end %>
